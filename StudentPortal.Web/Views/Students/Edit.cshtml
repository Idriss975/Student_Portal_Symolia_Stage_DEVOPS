@{
}

@model Student

@{
    ViewData["Title"] = "Edit Student";
}

<h1>Edit Student</h1>

<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="name" value="@Model.Name" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="email" value="@Model.Email" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" name="phone" value="@Model.Phone" asp-for="Phone" />
    </div>

    <!--<div class="mt-3">
        <input type="checkbox" class="form-check-input" id="subscribed" name="subscribed" value="@Model.Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="subscribed">Subscribed</label>
    </div>-->
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" asp-for="Subscribed" />
        <label class="form-check-label" asp-for="Subscribed">Subscribed</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
